#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'openapi3_parser'

files = %w[
  source/v2/openapi.yaml
  source/v1/openapi.yaml
]

files.each do |file|
  puts "ğŸ” Validating #{file}..."
  swagger_file = Openapi3Parser.load(file)

  next if swagger_file.valid?

  puts "âŒ Validation failed for #{file}:"
  swagger_file.errors.each do |error|
    puts "- #{error}"
  end
  exit 1
end

puts 'âœ… All OpenAPI specs are valid.'
exit 0
